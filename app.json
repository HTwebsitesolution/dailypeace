{
  "expo": {
    "name": "Daily Peace",
    "slug": "daily-peace",
    "scheme": "dailypeace",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/branding/icons/icon-ios.png",
    "splash": {
      "image": "./assets/branding/splash/splash-dailypeace.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B1016"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.dailypeace"
    },
    "android": {
      "package": "com.yourcompany.dailypeace",
      "adaptiveIcon": {
        "foregroundImage": "./assets/branding/icons/icon-android.png",
        "backgroundColor": "#0B1016"
      },
      "useNextNotificationsApi": true
    },
    "web": {
      "favicon": "./assets/branding/icons/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/branding/icons/icon-ios.png",
          "color": "#2F80ED",
          "mode": "production"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "REPLACE_WITH_EAS_PROJECT_ID"
      },
      "SENTRY_DSN": "REPLACE_WITH_SENTRY_DSN",
      "POSTHOG_KEY": "REPLACE_WITH_POSTHOG_KEY",
      "POSTHOG_HOST": "https://app.posthog.com"
    },
    "assetBundlePatterns": [
      "**/*"
    ]
  }
}
